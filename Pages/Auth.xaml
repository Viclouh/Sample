<Window x:Class="Sample.Pages.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample.Pages"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="350">
    <Grid>
        <StackPanel>

            <Label Content="Логин" Margin="10 0 10 0"/>
            <TextBox x:Name="Login" Margin="10 0 10 0" />
            <Label Content="Пароль" Margin="10 0 10 0"/>
            <PasswordBox x:Name="Password" Margin="10 0 10 0" />
            <Button x:Name="LoginButton"  Width="100" Click="LoginButton_Click" Content="Вход" Margin="10" HorizontalAlignment="Center"/>
            
        </StackPanel>
        
    </Grid>
</Window>
