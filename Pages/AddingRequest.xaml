<Window x:Class="Sample.Pages.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample.Pages"
        mc:Ignorable="d"
        Title="Добавление записи" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Описание" Margin="4 0 0 0"/>
            <TextBox x:Name="Description" Margin="4"/>
            <Label Content="Выбор запчасти" Margin="4 0 0 0"/>
            <ComboBox x:Name="EquipmentCB" DisplayMemberPath="Name" Margin="4"/>
            <Label Content="Выбор типа неисправности" Margin="4 0 0 0"/>
            <ComboBox x:Name="TypeFaultCB" DisplayMemberPath="Name" Margin="4"/>
            <Label Content="Выбор клиента" Margin="4 0 0 0"/>
            <ComboBox x:Name="UserCB" DisplayMemberPath="Name" Margin="4"/>
            <Label Content="Выбор состояние заявки" Margin="4 0 0 0"/>
            <ComboBox x:Name="StateRequestCB" DisplayMemberPath="Name" Margin="4"/>
            <StackPanel Orientation="Horizontal" >
                <Button Height="30" Width=" 100" Content="Назад" Click="Button_Click"/>
                <Button Height="30" Width=" 100" Content="Ок" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
